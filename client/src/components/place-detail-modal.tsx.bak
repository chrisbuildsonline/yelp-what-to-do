import { Dialog, DialogContent, DialogHeader, DialogTitle } from '@/components/ui/dialog';
import { Star, MapPin, Phone, Globe, Clock, DollarSign, Users } from 'lucide-react';
import { Badge } from '@/components/ui/badge';

interface PlaceDetailModalProps {
  open: boolean;
  onOpenChange: (open: boolean) => void;
  place: {
    id: string;
    name: string;
    rating: number;
    review_count: number;
    image_url: string;
    categories: Array<{ title: string }>;
    distance: number;
    price?: string;
    coordinates?: { latitude: number; longitude: number };
    phone?: string;
    url?: string;
    location?: { address1: string; city: string; state: string; zip_code: string };
    hours?: Array<{ day: number; start: string; end: string; is_overnight: boolean }>;
  };
}

export function PlaceDetailModal({ open, onOpenChange, place }: PlaceDetailModalProps) {
  const dayNames = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'];

  const formatTime = (time: string) => {
    if (!time || time.length !== 4) return time;
    const hours = parseInt(time.substring(0, 2));
    const minutes = time.substring(2);
    const period = hours >= 12 ? 'PM' : 'AM';
    const displayHours = hours > 12 ? hours - 12 : hours === 0 ? 12 : hours;
    return `${displayHours}:${minutes} ${period}`;
  };

  return (
    <Dialog open={open} onOpenChange={onOpenChange}>
      <DialogContent className="max-w-2xl max-h-[90vh] overflow-y-auto">
        <DialogHeader>
          <DialogTitle className="text-2xl">{place.name}</DialogTitle>
        </DialogHeader>

        <div className="space-y-6">
          {/* Image */}
          {place.image_url && (
            <div className="relative aspect-video rounded-lg overflow-hidden">
              <img
                src={place.image_url}
                alt={place.name}
                className="w-full h-full object-cover"
              />
            </div>
          )}

          {/* Rating and Reviews */}
          <div className="flex items-center gap-4">
            <div className="flex items-center gap-2">
              <Star className="w-5 h-5 fill-yellow-400 text-yellow-400" />
              <span className="text-lg font-bold">{place.rating}</span>
              <span className="text-sm text-muted-foreground">({place.review_count} reviews)</span>
            </div>
            {place.price && (
              <Badge variant="outline" className="flex items-center gap-1">
                <DollarSign className="w-3 h-3" />
                {place.price}
              </Badge>
            )}
          </div>

          {/* Categories */}
          <div className="flex flex-wrap gap-2">
            {place.categories.map((cat) => (
              <Badge key={cat.title} variant="secondary">
                {cat.title}
              </Badge>
            ))}
          </div>

          {/* Distance */}
          <div className="flex items-center gap-2 text-sm">
            <MapPin className="w-4 h-4 text-primary" />
            <span>{(place.distance / 1609).toFixed(1)} miles away</span>
          </div>

          {/* Address */}
          {place.location && (
            <div className="space-y-2">
              <h4 className="font-semibold text-sm">Address</h4>
              <div className="text-sm text-muted-foreground space-y-1">
                <p>{place.location.address1}</p>
                <p>
                  {place.location.city}, {place.location.state} {place.location.zip_code}
                </p>
              </div>
            </div>
          )}

          {/* Contact Info */}
          <div className="space-y-3">
            {place.phone && (
              <div className="flex items-center gap-3">
                <Phone className="w-4 h-4 text-muted-foreground" />
                <a href={`tel:${place.phone}`} className="text-sm text-primary hover:underline">
                  {place.phone}
                </a>
              </div>
            )}
            {place.url && (
              <div className="flex items-center gap-3">
                <Globe className="w-4 h-4 text-muted-foreground" />
                <a
                  href={place.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  className="text-sm text-primary hover:underline truncate"
                >
                  Visit Website
                </a>
              </div>
            )}
          </div>

          {/* Hours */}
          {place.hours && place.hours.length > 0 && (
            <div className="space-y-2">
              <h4 className="font-semibold text-sm flex items-center gap-2">
                <Clock className="w-4 h-4" />
                Hours
              </h4>
              <div className="text-sm space-y-1">
                {place.hours.map((hour) => (
                  <div key={hour.day} className="flex justify-between">
                    <span className="text-muted-foreground">{dayNames[hour.day]}</span>
                    <span>
                      {hour.is_overnight ? (
                        <span className="text-muted-foreground">Open Late</span>
                      ) : (
                        `${formatTime(hour.start)} - ${formatTime(hour.end)}`
                      )}
                    </span>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      </DialogContent>
    </Dialog>
  );
}
